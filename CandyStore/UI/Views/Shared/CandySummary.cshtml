@model Domain.Entities.Candy

<div class="card">

    <h3>
        @if (Model.ImageData != null)
        {
            <img class="img-thumbnail" align="left" width="100" height="100"
                 src="@Url.Action("GetImage", "Candy",
            new { Model.CandyId })" />
        }

        <strong style="margin-left:10px;">@Model.Name</strong>
        <span class="float-right badge badge-info">@Model.Price RUB</span>
        <span class="float-right badge badge-light">@Model.Weight Gr</span>

        @using (Html.BeginForm("AddToCart", "Cart"))
        {
            <div>
                @Html.HiddenFor(x => x.CandyId)
                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                <input type="submit" class="btn btn-success" style="margin: 10px 0px 0px 10px" value="Add to the cart" />
            </div>
        }
    </h3>
    
    <span class="lead">@Model.Description</span>
</div>

